# MLflow Configuration
MLFLOW_TRACKING_URI=./mlruns
MLFLOW_EXPERIMENT_NAME=imdb-sentiment-classification

# AWS Configuration (LocalStack)
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_DEFAULT_REGION=us-east-1
AWS_ENDPOINT_URL=http://localhost:4566

# S3 Configuration
S3_BUCKET_NAME=imdb-ml-models
S3_DATA_BUCKET=imdb-data

# Database Configuration
DATABASE_URL=sqlite:///./imdb_ml.db

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Monitoring Configuration
EVIDENTLY_SERVICE_URL=http://localhost:8085

# Prefect Configuration
PREFECT_API_URL=http://localhost:4200/api

# Model Configuration
MODEL_NAME=imdb_sentiment_classifier
MODEL_VERSION=latest

# Data Configuration
DATASET_SIZE=50000
TEST_SIZE=0.2
RANDOM_STATE=42

# Feature Engineering
MAX_FEATURES=10000
NGRAM_RANGE_MIN=1
NGRAM_RANGE_MAX=2

# Training Configuration
CV_FOLDS=5
SCORING_METRIC=f1

# Batch Prediction Configuration
BATCH_SIZE=1000
OUTPUT_FORMAT=csv

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
